<div class="col-lg-6 mx-lg-auto">
  <div class="card shadow">
    <div class="card-header"><h2 class="card-title text-center">Sign In</h2></div>
    <div class="card-body">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :full_name, class: "mb-2" %><br />
        <%= f.text_field :username, autofocus: true, class: "form-control form-control-lg" %>
      </div>

      <div class="form-group">
        <%= f.label :email, class: "mb-2" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg" %>
      </div>

      <div class="form-group">
        <%= f.label :mobile, class: "mb-2" %><br />
        <%= f.text_field :mobile, :maxlength => 10, autofocus: true, class: "form-control form-control-lg" %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "mb-2" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-lg" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, class: "mb-2" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg" %>
      </div><br>

      <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
 </div>
 <br><br> 
</div>