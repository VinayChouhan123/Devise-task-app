<p>
  <strong>Commenter:</strong>
  <%= comment.commenter %>
</p>

<p>
  <strong>Comment:</strong>
  <%= comment.body %>
</p>

<% if user_signed_in? %>
  <%= link_to 'Delete', [comment.post, comment], class: "btn btn-primary", method: :delete, data: { confirm: 'Are you sure?' } %>
<% else %>
  <% flash.now[:alert] = "" %>
<% end %>